<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.hospitaldetail.HospitalDetailActivity">

    <TextView
        android:id="@+id/hospital_detail_name_textView"
        style="@style/BaseTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        tools:text="Hospital_test"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/hospital_detail_scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/hospital_detail_name_textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/hospital_detail_request_button"
        android:scrollbars="horizontal"
        android:layout_marginTop="20dp"
        android:fillViewport="true" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <View
                android:id="@+id/hospital_detail_divider1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/hint_gray"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <RelativeLayout
                android:id="@+id/hospital_detail_introduction_relativeLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/hospital_detail_divider1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/hospital_detail_image_imageView"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="24dp"
                    android:src="@drawable/ic_anxiety_64"
                    app:civ_border_color="@color/light_gray"
                    app:civ_border_overlay="false"
                    app:civ_border_width="1dp" />

                <TextView
                    android:id="@+id/hospital_detail_doctor_name_textView"
                    style="@style/BaseSubtitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/hospital_detail_image_imageView"
                    android:layout_marginStart="32dp"
                    android:layout_toEndOf="@id/hospital_detail_image_imageView"
                    tools:text="이재성 의사" />

                <TextView
                    android:id="@+id/hospital_detail_counseling_type_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/hospital_detail_doctor_name_textView"
                    android:layout_alignStart="@id/hospital_detail_doctor_name_textView"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="32dp"
                    tools:text="# Melancholia # OCD \n# Anxiety"
                    android:textColor="@color/hint_gray" />
            </RelativeLayout>

            <View
                android:id="@+id/hospital_detail_divider2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/hint_gray"
                app:layout_constraintTop_toBottomOf="@id/hospital_detail_introduction_relativeLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/hospital_detail_information_title_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/BaseSubtitleTextView"
                android:text="@string/hospital_detail_information"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/hospital_detail_divider2"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                style="@style/BaseContentTextView"
                android:id="@+id/hospital_detail_information_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/hospital_detail_information_title_textView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="asdfasdfddddddddaa\naa\naaaaaaaaaaaaaaaaaaa\naaaaaaaaaaaaaaaaaaa\naaaaaaaaaaaa\naaaaaaaaa\naaaaaaaaaaa\naaaaaaaaaaaaaaaaaaaaaaaaa\naaaaaaaaaddd\nddddddddddddd\ndddddddddddddd\ndddddddddddddddddddddddddddddddddddddddd"/>

            <View
                android:id="@+id/hospital_detail_divider3"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/hint_gray"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/hospital_detail_information_textView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/hospital_detail_counseling_time_title_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/BaseSubtitleTextView"
                android:text="@string/hospital_detail_counseling_time"
                app:layout_constraintTop_toBottomOf="@id/hospital_detail_divider3"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp" />

            <TextView
                style="@style/BaseContentTextView"
                android:id="@+id/hospital_detail_counseling_time_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/hospital_detail_counseling_time_title_textView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Mon 09:00 ~ 18:00\nMon 09:00 ~ 18:00\nMon 09:00 ~ 18:00" />

            <View
                android:id="@+id/hospital_detail_divider4"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/hint_gray"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/hospital_detail_counseling_time_textView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/hospital_detail_location_title_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/BaseSubtitleTextView"
                android:text="@string/hospital_detail_location"
                app:layout_constraintTop_toBottomOf="@id/hospital_detail_divider4"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp" />

            <TextView
                style="@style/BaseContentTextView"
                android:id="@+id/hospital_detail_location_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/hospital_detail_location_title_textView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="경기도 용인시 수지구 xxx.xxxxx" />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/hospital_detail_request_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_primary_round_blue"
        android:textColor="@color/background_white"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:text="@string/hospital_detail_request_button"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/hospital_detail_scrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>